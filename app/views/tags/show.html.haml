.container
  .row
    .span3
      = render 'shared/menu'
    .span9
      %h1
        = @tag 
        %small
          rank: #{REDIS.zrevrank('tags', @tag) + 1},
          frequency: #{REDIS.zscore('tags', @tag).to_i}
      %ul
        - REDIS.smembers("tags:#{@tag}").each do |item|
          %li= link_to REDIS.hget(item, 'canonical_title'), REDIS.hget(item, 'path')
