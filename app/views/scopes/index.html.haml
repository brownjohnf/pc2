.container
  .row
    .twelvecol.last
      :erb
        <table>
          <tr>
            <th>Name</th>
            <th>Title</th>
            <th>Description</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>

        <% @scopes.each do |scope| %>
          <tr>
            <td><%= scope.name %></td>
            <td><%= scope.title %></td>
            <td><%= scope.description %></td>
            <td><%= link_to 'Show', scope %></td>
            <td><%= link_to 'Edit', edit_scope_path(scope) %></td>
            <td><%= link_to 'Destroy', scope, confirm: 'Are you sure?', method: :delete %></td>
          </tr>
        <% end %>
        </table>
