.feed_item
  %p
    .floatleft= moment.photos.any? ? image_tag(moment.photos.first.photo.url(:icon), :class => 'avatar') : avatar_for_user(moment.user)
    %h3
      = link_to moment.headline, moment
      %small
        created by
        = link_to moment.user.name, moment.user
        = time_ago_in_words(moment.updated_at)
        ago
        = link_to 'edit', edit_moment_path(moment) if can? :update, moment
      %br
      = moment.startdate.strftime('%B %Y')
    = moment.text
    %p #{moment.user.name}, #{moment.user.country}, #{link_to moment.startdate.year, moments_path(:year => moment.startdate.year)} - #{link_to moment.startdate.year, moments_path(:year => moment.startdate.year)}
    .clearfloat
  %hr
