.row
  .span3
    = render 'shared/menu'
  .span6
    = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => 'form-horizontal' }) do |f|
      .control-group
        .controls
          %h2 Change your password
      .control-group
        .controls
          = devise_error_messages!
      .control-group
        = f.label :password, 'New password', :class => 'control-label'
        .controls
          .input-prepend
            %span.add-on
              %i.icon-barcode
            = f.password_field :password
          %p.help-block your new password
      .control-group
        = f.label :password_confirmation, 'Confirm password', :class => 'control-label'
        .controls
          .input-prepend
            %span.add-on
              %i.icon-check
            = f.password_field :password_confirmation
          %p.help-block your new password
      .control-group
        .controls
          = f.submit "Change my password", :class => 'btn btn-primary'
  .span3
    = render "links"

