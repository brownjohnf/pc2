= form_for(@contribution) do |f|
  = render 'shared/form_error' if @contribution.errors.any?
  = render :partial => 'fields', :locals => { :f => f }
  .field
    = f.label :contributable_type, 'To what is this person contributing?'
    = f.collection_select(:contributable_type, Scope.all, :name, :title)
  .field
    = f.label :contributable_id, 'More specifically (by ID)?'
    = f.text_field:contributable_id
  .actions
    = f.submit
